<table>
  <tbody>
    <th>Cover</th>
    <th>Title</th>
    <th><%= pluralize(@book.categories.size, 'Category') %></th>
    <th><%= pluralize(@book.authors.size, 'Author') %></th>
    <th><%= pluralize(@book.publishers.size, 'Publisher') %></th>
    <th>Pages</th>
    <th>Price</th>
    <tr>
      <td><%= image_tag @book.cover.url(:medium) %></td>
      <td><%= @book.title %></td>
      <td><%= @book.categories.collect(&:name).join(", ") %></td>
      <td><%= @book.authors.pluck(:first_name, :last_name).join(", ") %></td>
      <td><%= @book.publishers.collect(&:name).join(", ") %></td>
      <td><%= @book.pages %></td>
      <td><%= number_to_currency @book.price %></td>
    </tr>
  </tbody>
</table>
<%= link_to 'Back', books_path, class: "btn btn-danger" %>
